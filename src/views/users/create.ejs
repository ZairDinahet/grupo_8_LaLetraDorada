    <main>
        <div class="main-create-container">
            <h2>Creación de Producto</h2>
            <form action="" method="post">

                <section class="options-container">
                    <div class="left">
                        <label for="title"> Nombre </label>
                        <input type="text" name="title" id="title" 
                        placeholder="Nombre" required>
                    </div>

                    <div class="right">
                        <label for="author">Autor</label>
                        <input type="text" name="author" id="author" 
                        placeholder="Autor" required>
                    </div>
                </section>

                
                <section class="options-container">
                    <div class="left">
                        <label for="description">Descripción</label>
                        <input type="text" name="description" id="description" 
                        placeholder="Descripción" required>
                    </div>

                    <div class="right">
                        <label>Categoría </label>
                        <select class="category-select-main" id="category-select-main">
                            <option value="antologia">Antología</option>
                            <option value="arquitectura">Arquitectura y diseño</option>
                            <option value="arte">Arte</option>
                            <option value="ciencia">Ciencia</option>
                            <option value="ciencia_ficcion">Ciencia ficción</option>
                            <option value="clasicos">Clásicos</option>
                            <option value="cuentos">Cuentos</option>
                            <option value="derecho">Derecho</option>
                            <option value="economia_negocios">Economía y Negocios</option>
                            <option value="fantasia">Fantasía</option>
                            <option value="filosofia">Filosofía</option>
                            <option value="genero">Género</option>
                            <option value="novela_juvenil">Novela Juvenil</option>
                            <option value="romance">Romance</option>
                            <option value="suspenso">Suspenso</option>
                        </select>
                    </div>
                </section>

                <section class="options-container">
                    <div class="left">
                        <label> Formato </label>
                        <select class="format-select" required>
                            <option value="tapa dura">Tapa Dura</option>
                            <option value="tapa blanda">Tapa Blanda</option>
                            <option value="ebook">Ebook</option>
                            <option value="pdf">PDF</option>
                        </select>
                    </div>

                    <div class="right">
                        <label for="price"> Precio </label>
                        <input type="text" name="price" id="price" 
                        placeholder="Precio" required>
                    </div>
                </section>
            
                <section class="buttons">
                    <button class="reset" type="reset"> Borrar </button>
                    <button class="save" type="submit"> Guardar </button>
                </section>

            </form>
        </div>
