<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/create.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;500;700&display=swap" rel="stylesheet">
    <title> Crear Producto - La Letra Dorada </title>
</head>
<body>

    <%- include('../partials/header.ejs') %>

    <main>
        <div class="main-create-container">
            <h2>Creación de Producto</h2>
            <form action="/products/create" method="post" enctype="multipart/form-data">

                <section class="book-data">

                    <h3>Información del Libro</h3>

                    <section class="field-form-container">
                        <div class="left">
                            <label for="title"> Título </label>
                            <input type="text" name="title" id="title" 
                            placeholder="Título" required>
                        </div>

                        <div class="right">
                            <label for="author">Autor</label>
                            <input type="text" name="author" id="author" 
                            placeholder="Autor" required>
                        </div>
                    </section>

                    
                    
                    <section class="field-form-container">
                        <div class="left">
                            <label for="coverImg">Portada</label>
                            <input type="file" name="coverImg" id="coverImg" 
                            placeholder="Elegir Portada" required>
                        </div>

                        <div class="right">
                            <label>Género </label>
                            <select class="category-select-main" 
                            id="category-select-main" name="genre" required>
                            <option value="" disabled selected>Seleccione el género </option>
                            <% genres.forEach(genre => { %>
                            <option value="<%= genre.id %>"><%= genre.name %></option>
                            <% }); %>
                            </select>
                        </div>
                    </section>
            
                </section>

                <section class="textarea-description">

                    <div class="field-form-container">
                        <label for="description">
                            Descripción
                        </label>
                        <textarea name="description" id="description" 
                        cols="100" rows="8" placeholder="Descripción" required></textarea>
                    </div>

                </section>
                <section class="textarea-description">

                    <div class="field-form-container">
                        <label for="biography">
                            Biografía del autor
                        </label>
                        <textarea name="biography" id="biography" 
                        cols="100" rows="12" placeholder="Biografía del autor - al menos dos párrafos" required></textarea>
                    </div>

                </section>

                <section class="book-cost">

                    <h3> Precios </h3>

                    <section class="field-form-container">
                        <div class="left">
                            <label for="priceHardCover"> 
                                Tapa dura 
                            </label>
                            <input type="number" name="priceHardCover" id="priceHardCover"
                            placeholder="Precio">
                        </div>

                        <div class="right">
                            <label for="priceSoftCover"> Tapa blanda </label>
                            <input type="number" name="priceSoftCover" id="priceSoftCover"
                            placeholder="Precio">
                        </div>
                    </section>
                
                    
                    <section class="field-form-container">
                        <div class="left">
                            <label for="priceAudio"> Audio Libro </label>
                            <input type="number" name="priceAudio" id="priceAudio"
                            placeholder="Precio">
                        </div>
                        
                        <div class="right">
                            <label for="priceEpub"> Epub </label>
                            <input type="number" name="priceEpub" id="priceEpub" 
                            placeholder="Precio">
                        </div>
                    </section>
                    
                    <section class="buttons">
                        <button class="reset" type="reset"> Borrar </button>
                        <button class="save" type="submit"> Guardar </button>
                    </section>

                </section>
            </form>
        </div>
    </main>

    <%- include('../partials/footer.ejs') %>

</body>
</html>